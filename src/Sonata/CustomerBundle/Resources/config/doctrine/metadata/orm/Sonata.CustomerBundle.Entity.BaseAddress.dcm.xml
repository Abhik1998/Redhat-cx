<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Sonata\BasketBundle\Entity\BaseAddress" >

        <field name="current"       type="boolean"  column="current"/>
        <field name="type"          type="integer"  column="type"/>
        <field name="firstname"     type="string"   column="firstname"  length="255"/>
        <field name="lastname"      type="string"   column="lastname"   length="255"/>
        <field name="address1"      type="string"   column="address1"      length="255"/>
        <field name="address2"      type="string"   column="address2"    nullable="true"  length="255"/>
        <field name="address3"      type="string"   column="address3"    nullable="true"  length="255"/>
        <field name="postcode"      type="string"   column="postcode"   length="12"/>
        <field name="city"          type="string"   column="city"       length="255"/>
        <field name="country_code"  type="string"   column="country_code"    length="3"/>
        <field name="phone"         type="string"   column="phone"      nullable="true" length="255"/>

        <field name="updated_at"    column="updated_at"     type="datetime" nullable="true"/>
        <field name="created_at"    column="created_at"     type="datetime" nullable="true"/>
        
    </mapped-superclass>
</doctrine-mapping>
