{% sonata_template_box 'This is the product category template. Feel free to override it.' %}

{% render controller("SonataProductBundle:Category:displayBreadcrumb", {'categoryId': category.id}) %}

<h1>{{ category.name }}</h1>
{% if category.media %}
    {% thumbnail category.media, 'reference' %}
{% endif %}

{% if category.description %}
    <p class="lead">
        {{ category.description|raw }}
    </p>
{% endif %}

{% if category.hasChildren %}
    {% render controller("SonataProductBundle:Category:listSubCategories", {'categoryId': category.id}) %}
{% endif %}

{% render controller("SonataProductBundle:Category:listProducts", {'categoryId': category.id}) %}
