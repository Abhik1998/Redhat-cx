<div class="panel panel-default">
{% if similar_cross|length > 0 %}
    <div class="panel-heading">
        <h3 class="panel-title">{% trans from "SonataProductBundle" %}sonata.product.cross_selling.title{% endtrans %}</h3>
    </div>

    <div class="panel-body product-grid">
        <div class="col-lg-12">
            {% sonata_template_box 'This is the similar product view template. Feel free to override it.' %}
        </div>

        {% block similar_products %}
            {% for similar_product in similar_cross if provider.hasEnabledVariations(similar_product) or not provider.hasVariations(similar_product) %}
                {% block similar_product %}
                    <div class="col-sm-3">
                        {% include "SonataProductBundle:Product:view_thumbnail.html.twig" with {product: similar_product} %}
                    </div>
                {% endblock %}
            {% endfor %}
        {% endblock %}
    {% else %}
        {% trans from "SonataProductBundle" %}sonata.product.cross_selling.no_match{% endtrans %}
    {% endif %}
    </div>
</div>
