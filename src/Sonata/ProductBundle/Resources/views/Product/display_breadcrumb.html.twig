<ul class="breadcrumb">
    <li><a href="{{ path('sonata_catalog_index') }}"><i class="glyphicon glyphicon-home"></i></a><span class="divider">&raquo;</span></li>
    {% for category in categories %}
        <li>
            <a href="{{ url('sonata_catalog_index', {'category_id': category.id, 'category_slug': category.slug}) }}">
                {{ category.name }}
            </a>
            <span class="divider">&raquo;</span>
        </li>
    {% endfor %}
    <li>{{ product.name }}</li>
</ul>
