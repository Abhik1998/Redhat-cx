<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- PRODUCT -->
        <parameter key="sonata.product.admin.product.class">Sonata\ProductBundle\Admin\ProductAdmin</parameter>
        <parameter key="sonata.product.admin.product.entity">Application\Sonata\ProductBundle\Entity\Product</parameter>

        <!-- CATEGORY -->
        <parameter key="sonata.product.admin.category.class">Sonata\ProductBundle\Admin\CategoryAdmin</parameter>
        <parameter key="sonata.product.admin.category.entity">Application\Sonata\ProductBundle\Entity\Category</parameter>

        <!-- DELIVERY -->
        <parameter key="sonata.product.admin.delivery.class">Sonata\ProductBundle\Admin\DeleveryAdmin</parameter>
        <parameter key="sonata.product.admin.delivery.entity">Application\Sonata\ProductBundle\Entity\Delivery</parameter>

        <parameter key="sonata.product.admin.product.manager">Sonata\ProductBundle\Model\DoctrineModelManager</parameter>
    </parameters>

    <services>
        <service id="sonata.product.entity_manager" alias="doctrine.orm.default_entity_manager" />

        <service id="sonata.product.admin.product" class="%sonata.product.admin.product.class%">
            <tag name="sonata.admin" manager_type="orm" group="sonata_ecommerce" label="product"/>
            <argument />
            <argument>%sonata.product.admin.product.entity%</argument>
            <argument>SonataProductBundle:ProductAdmin</argument>
            <argument type="service" id="sonata.product.pool" />

            <call method="addChild">
                <argument type="service" id="sonata.product.admin.category" />
            </call>

            <call method="addChild">
                <argument type="service" id="sonata.product.admin.delivery" />
            </call>
        </service>

        <service id="sonata.product.admin.category" class="%sonata.product.admin.category.class%">
            <tag name="sonata.admin" manager_type="orm" group="sonata_ecommerce" label="category"/>
            <argument />
            <argument>%sonata.product.admin.category.entity%</argument>
            <argument />
        </service>

        <service id="sonata.product.admin.delivery" class="%sonata.product.admin.delivery.class%">
            <tag name="sonata.admin" manager_type="orm" group="sonata_ecommerce" label="delivery"/>
            <argument />
            <argument>%sonata.product.admin.delivery.entity%</argument>
            <argument />
        </service>

        <service id="sonata.product.admin.product.manager" class="%sonata.product.admin.product.manager%">
            <argument type="service" id="sonata.product.entity_manager" />
            <argument type="service" id="sonata.product.pool" />
        </service>
    </services>

</container>