<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xsi="http://www.w3.org/2001/XMLSchema-instance"
    schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sonata\ProductBundle\Entity\BaseCategory" >

        <field name="name"              type="string"   column="name"               length="255"/>

        <field name="description"          column="description"           type="text"   nullable="true" />
        <field name="rawDescription"       column="raw_description"       type="text"   nullable="true" />
        <field name="descriptionFormatter" column="description_formatter" type="string" nullable="true" />

        <field name="subDescription"   type="text"     column="sub_description"    nullable="true"/>
        <field name="enabled"           type="boolean"  column="enabled"/>
        <field name="slug"              type="string"   column="slug"               length="255"/>
        <field name="position"          type="integer"  column="position"           default="0"    nullable="true"/>

        <field name="updatedAt"    column="updated_at"     type="datetime" />
        <field name="createdAt"    column="created_at"     type="datetime" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist" />
            <lifecycle-callback type="preUpdate" method="preUpdate" />
        </lifecycle-callbacks>

    </mapped-superclass>
</doctrine-mapping>
