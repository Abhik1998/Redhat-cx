<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sonata_admin_order_index" pattern="/">
        <default key="_controller">SonataOrderBundle:OrderAdmin:index</default>
    </route>

    <route id="sonata_admin_order_view" pattern="/{reference}">
        <default key="_controller">SonataOrderBundle:OrderAdmin:view</default>
    </route>

    <route id="sonata_admin_order_view" pattern="/{reference}/download">
        <default key="_controller">SonataOrderBundle:OrderAdmin:download</default>
    </route>

    <route id="sonata_admin_order_update" pattern="/{reference}/update">
        <default key="_controller">SonataOrderBundle:OrderAdmin:update</default>
    </route>

    <route id="sonata_admin_order_element_view" pattern="/{reference}/element/{id}">
        <default key="_controller">SonataOrderBundle:OrderAdmin:viewOrderElement</default>
    </route>

    <route id="sonata_admin_order_element_update" pattern="/{reference}/element/{id}/update">
        <default key="_controller">SonataOrderBundle:OrderAdmin:updateOrderElement</default>
    </route>

</routes>
