<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Sonata\Bundle\InvoiceBundle\Entity\BaseInvoice">

        <field name="reference"     type="string"   column="reference"  length="255"/>
        <field name="user_id"       type="integer"  column="user_id"    length="4"/>
        <field name="currency"      type="string"   column="currency"   length="3"/>
        <field name="status"        type="integer"  column="status"/>
        <field name="total_inc"     type="decimal"  column="total_inc"  scale="4"/>
        <field name="total_excl"    type="decimal"  column="total_excl" scale="4"/>
        <field name="name"          type="string"   column="name"       length="255"/>
        <field name="phone"         type="string"   column="phone"      length="255"/>
        <field name="address1"      type="string"   column="address1"   length="255"/>
        <field name="address2"      type="string"   column="address2"   length="255"/>
        <field name="address3"      type="string"   column="address3"   length="255"/>
        <field name="city"          type="string"   column="city"       length="255"/>
        <field name="postcode"      type="string"   column="postcode"   length="255"/>
        <field name="country"       type="string"   column="country"    length="255"/>
        <field name="fax"           type="string"   column="fax"        length="255"/>
        <field name="email"         type="string"   column="email"      length="255"/>
        <field name="mobile"        type="string"   column="mobile"     length="255"/>

    </mapped-superclass>
</doctrine-mapping>
