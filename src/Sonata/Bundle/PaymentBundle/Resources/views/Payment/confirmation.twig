{% if order.is_validated %}
    <h1>{% trans 'title_validation_confirmation_payment' from 'PaymentBundle' %}</h1>

    <p>
        {% trans 'message_validation_payment' from 'PaymentBundle' %}
    </p>


{% else %}

    <h1>{% trans 'title_not_validated_confirmation_payment' from 'PaymentBundle' %}</h1>

    <p>
        {% trans 'message_not_validated_payment' from 'PaymentBundle' %}
    </p>

{% endif %}

<a href="{{ url('sonata_order_view', {'reference' : order.reference }) }}">{{ order.reference }}</a>