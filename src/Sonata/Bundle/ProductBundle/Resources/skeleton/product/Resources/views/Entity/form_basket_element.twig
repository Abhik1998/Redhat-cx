{% extends 'ProductBundle:Product:form_basket_element.twig' %}

{% block product_description %}
    <b>{{ basket_element.name }}</b> <br />
    {{ basket_element.product.description }}
{% endblock %}

{% block product_unit_price %}
    {{ basket_element.getUnitPrice(true) }}
{% endblock %}

{% block product_quantity %}
    {{ field_group.quantity|render_errors }}
    {{ field_group.quantity|render }}
{% endblock %}

{% block product_total %}
    {{ basket_element.getTotal(true) }}
{% endblock %}

{% block product_delete %}
    {{ field_group.delete|render }}
{% endblock %}
