<h2>{% trans 'title_sub_categories' from 'CategoryBundle' %}</h2>

{% if pager.count == 0 %}
    {% trans 'no_sub_categories_available' from 'CategoryBundle' %}
{% else %}
    <ul>
        {% for category in pager.getResults %}
            <li><a href="{% url 'sonata_category_view' with ['category_id': category.id, 'slug': category.slug] %}">{{ category.name }}</a></li>
        {% endfor %}
    </ul>
{% endif %}