<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sonata\Bundle\ProductBundle\Entity\BasePackage" >

        <field name="product_id"    type="integer"  column="product_id"/>
        <field name="width"         type="decimal"  column="width"          scale="4"/>
        <field name="height"        type="decimal"  column="height"         scale="4"/>
        <field name="length"        type="decimal"  column="length"         scale="4"/>
        <field name="weight"        type="decimal"  column="weight"         scale="4"/>
        <field name="enabled"       type="boolean"  column="enabled"/>

        <field name="updated_at"    column="updated_at"     type="datetime" />
        <field name="created_at"    column="created_at"     type="datetime" />

    </mapped-superclass>
</doctrine-mapping>
