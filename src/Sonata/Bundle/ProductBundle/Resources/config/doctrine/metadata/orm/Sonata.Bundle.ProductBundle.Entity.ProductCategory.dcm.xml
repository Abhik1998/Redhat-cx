<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi="http://www.w3.org/2001/XMLSchema-instance"
                  schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        name="Sonata\Bundle\ProductBundle\Entity\ProductCategory"
        table="sonata_products_categories"
        repository-class="Sonata\Bundle\ProductBundle\Entity\ProductCategoryRepository"    
        >
        <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>


        <field name="category_id"   type="integer" column="category_id"/>
        <field name="product_id"    type="integer" column="product_id"/>
        <field name="enabled"       type="boolean" column="enabled"/>

        <field name="updated_at"    column="updated_at"     type="datetime" />
        <field name="created_at"    column="created_at"     type="datetime" />

        <one-to-one
                field="product"
                target-entity="Sonata\Bundle\ProductBundle\Entity\Product"
                inversed-by="product_category"
                orphan-removal="" >

            <join-columns>
                <join-column
                    name="product_id"
                    referenced-column-name="id"
                    on-delete="CASCADE"
                />
            </join-columns>
            
        </one-to-one>

        <one-to-one
                field="category"
                target-entity="Sonata\Bundle\ProductBundle\Entity\Category"
                inversed-by="product_category"
                orphan-removal="">
            
            <join-columns>
                <join-column name="category_id" referenced-column-name="id" on-delete="CASCADE"/>
            </join-columns>
            
        </one-to-one>

        <lifecycle-callbacks/>
    </entity>
    
</doctrine-mapping>
