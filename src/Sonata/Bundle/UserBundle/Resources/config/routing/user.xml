<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <route id="sonata_user_dashboard" pattern="/dashboard">
        <default key="_controller">UserBundle:User:dashboard</default>
    </route>

    <route id="sonata_user_addresses" pattern="/address">
        <default key="_controller">UserBundle:User:addresses</default>
    </route>

    <route id="sonata_user_address_edit" pattern="/address/edit/:address_id">
        <default key="_controller">UserBundle:User:editAddress</default>
    </route>

    <route id="sonata_user_address_update" pattern="/address/update">
        <default key="_controller">UserBundle:User:updateAddress</default>
    </route>

</routes>
