<?xml version="1.0" ?>
<constraint-mapping xmlns="http://www.symfony-project.org/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/constraint-mapping
        http://www.symfony-project.org/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sonata\Component\Basket\Basket">
        <property name="elements">
           <constraint name="Sonata\Component\Form\BasketElementCollection" >
               <option name="groups" >
                    <value>basket</value>
               </option>
           </constraint>
        </property>

        <property name="delivery_method">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>delivery</value>
               </option>
           </constraint>
        </property>

        <property name="delivery_address">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>delivery</value>
               </option>
           </constraint>
        </property>

        <property name="payment_method">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>billing</value>
               </option>
           </constraint>
        </property>

        <property name="payment_address">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>billing</value>
               </option>
           </constraint>
        </property>

    </class>

</constraint-mapping>
