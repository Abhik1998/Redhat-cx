<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sonata\Bundle\BasketBundle\Entity\Address" table="sonata_address">

        <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="user_id"       type="integer"  column="user_id"    length="4"/>
        <field name="current"       type="boolean"  column="current"/>
        <field name="type"          type="integer"  column="type"/>
        <field name="firstname"     type="string"   column="firstname"  length="255"/>
        <field name="lastname"      type="string"   column="lastname"   length="255"/>
        <field name="addr1"         type="string"   column="addr1"      length="255"/>
        <field name="addr2"         type="string"   column="addr2"      length="255"/>
        <field name="addr3"         type="string"   column="addr3"      length="255"/>
        <field name="postcode"      type="string"   column="postcode"   length="12"/>
        <field name="city"          type="string"   column="city"       length="255"/>
        <field name="country"       type="string"   column="country"    length="3"/>
        <field name="phone"         type="string"   column="phone"      length="255"/>

        <lifecycle-callbacks/>
    </entity>
</doctrine-mapping>
