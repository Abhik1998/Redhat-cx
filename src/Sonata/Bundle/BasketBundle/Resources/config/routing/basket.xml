<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <route id="sonata_basket_index" pattern="/">
        <default key="_controller">BasketBundle:Basket:index</default>
    </route>

    <route id="sonata_basket_add_product" pattern="/add-porduct">
        <default key="_controller">BasketBundle:Basket:addProduct</default>
    </route>

    <route id="sonata_basket_update" pattern="/update">
        <default key="_controller">BasketBundle:Basket:update</default>
    </route>

    <route id="sonata_basket_reset" pattern="/reset">
        <default key="_controller">BasketBundle:Basket:reset</default>
    </route>

    <route id="sonata_basket_authentification" pattern="/step/authentification">
        <default key="_controller">BasketBundle:Basket:authentificationStep</default>
    </route>

    <route id="sonata_basket_delivery" pattern="/step/delivery">
        <default key="_controller">BasketBundle:Basket:deliveryStep</default>
    </route>

    <route id="sonata_basket_payment" pattern="/step/payment">
        <default key="_controller">BasketBundle:Basket:paymentStep</default>
    </route>

    <route id="sonata_basket_final" pattern="/step/final-review">
        <default key="_controller">BasketBundle:Basket:finalReviewStep</default>
    </route>

</routes>
