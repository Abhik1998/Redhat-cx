<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sonata\Component\Basket\Basket">
        <property name="basketElements">
           <constraint name="Sonata\Component\Form\BasketElementCollection" >
               <option name="groups" >
                    <value>elements</value>
               </option>
           </constraint>
        </property>

        <property name="deliveryMethod">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>delivery</value>
               </option>

           </constraint>
        </property>

        <property name="deliveryAddress">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>delivery</value>
               </option>
           </constraint>
        </property>

        <property name="paymentMethod">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>payment</value>
               </option>
           </constraint>
        </property>

        <property name="paymentAddress">
           <constraint name="NotNull" >
               <option name="groups" >
                    <value>payment</value>
               </option>
           </constraint>
        </property>
    </class>

</constraint-mapping>
