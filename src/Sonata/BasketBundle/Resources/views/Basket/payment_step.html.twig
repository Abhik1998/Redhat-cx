{% sonata_template_box 'This is the basket billing step template. Feel free to override it.' %}

<h1>{{ 'sonata.basket.title_payment_step_basket'|trans({}, 'SonataBasketBundle') }}</h1>

<h4>{{ 'sonata.basket.title_address_billing_step_basket'|trans({}, 'SonataBasketBundle') }}</h4>
{{ basket.billingAddress.getFullAddress("<br />")|raw }}


<form action="{{ url('sonata_basket_payment') }}" method="POST" >
    <div>
        <h2>{{ 'sonata.basket.title_payment_method'|trans({}, 'SonataBasketBundle') }}</h2>

        {{ form_errors(form.paymentMethod) }}
        {{ form_widget(form.paymentMethod) }}
    </div>

    {{ form_rest(form) }}

    <div class="well">
        <a href="{{ url('sonata_basket_payment_address') }}" class="btn"><i class="icon-arrow-left"></i>&nbsp;{% trans from 'SonataBasketBundle' %}sonata.basket.link_previous_step{% endtrans %}</a>

        <button type="submit" class="btn btn-primary pull-right">{{ 'sonata.basket.btn_update_payment_step'|trans({}, 'SonataBasketBundle') }}&nbsp;<i class="icon-arrow-right icon-white"></i></button>
    </div>
</form>
